<h1>Atualização de Produtos</h1>

<div class="mt-5">
    <form action="/produto/update/{{ produto.id }}" method="POST">
        <div class="mb-4">
            <label for="nome">Nome</label>
            <input type="text" name="nome" class="form-control">
        </div>

        <div class="mb-4">
            <label for="categoria">Categoria</label>
            <input type="text" name="categoria" class="form-control">
        </div>

        <div class="mb-4">
            <label for="quantidade">Quantidade</label>
            <input type="text" name="quantidade" class="form-control" id="quantidade">
        </div>

        <div class="mb-4">
            <label for="valor">Valor</label>
            <input type="text" name="valor" class="form-control" id="valor">
        </div>

         <div class="mb-4">
            <label for="data_entrada">Data_entrada</label>
            <input type="text" name="data_entrada" class="form-control" id="data_entrada">
        </div>

        <button class="btn btn-success">Salvar </button>
    </form>
</div>